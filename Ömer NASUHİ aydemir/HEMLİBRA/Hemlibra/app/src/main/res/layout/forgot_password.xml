<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gri"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <TextView
        android:id="@+id/member_login"
        android:layout_width="match_parent"
        android:background="@color/beyaz"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="15dp"
        android:fontFamily="@font/trade_gothic_bold"
        android:layout_height="wrap_content"
        android:textColor="@color/siyah_text_color"
        android:textSize="25sp"

        android:text="MEMBER LOGIN"></TextView>



    <TextView
        android:id="@+id/welcome_to_hemlibra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ED4E34"
        android:textSize="40sp"

        android:fontFamily="@font/trade_gothic_bold"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="Welcome to Hemlibra">
    </TextView>




    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="25dp">



        <EditText
            android:id="@+id/e_mail_edittext"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Your e-mail"
            android:paddingLeft="55dp"
            android:focusable="true"
            android:textSize="16sp"

            android:inputType="text|textVisiblePassword|textNoSuggestions"
            android:textColorHint="@color/log_in_gri"
            android:textColor="@color/log_in_gri"
            android:importantForAutofill="no"
            android:fontFamily="@font/open_sans_bold"
            android:background="@drawable/beyaz_edittext"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:drawablePadding="10dp"
            />



        <ImageView
            android:id="@+id/mail_icon"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/mail"></ImageView>




    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="60dp">



        <EditText
            android:id="@+id/sifre_edittext"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:hint="Your password"
            android:inputType="textPassword"
            android:paddingLeft="55dp"
            android:textSize="16sp"
            android:focusable="true"

            android:textColorHint="@color/log_in_gri"
            android:textColor="@color/log_in_gri"

            android:fontFamily="@font/open_sans_bold"
            android:background="@drawable/beyaz_edittext"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:drawablePadding="10dp"
            />



        <ImageView
            android:id="@+id/kilit_icon"
            android:layout_width="22dp"
            android:layout_height="25dp"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/sifre"></ImageView>




        <Button

            android:id="@+id/goz_button"
            android:layout_width="28dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:padding="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/goz"></Button>



    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">





        <TextView
            android:id="@+id/password_is_case"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Password is case - sensitive"
            android:layout_marginLeft="25dp"
            android:textSize="12sp"
            android:layout_weight="1"
            android:textColor="#A7A7A7"
            ></TextView>


        <TextView
            android:id="@+id/forgot_password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password?"
            android:textColor="@color/siyah_text_color"
            android:fontFamily="@font/open_sans_bold"
            android:textSize="14sp"
            android:layout_marginRight="25dp"
            android:layout_gravity="center"
            ></TextView>


    </LinearLayout>





    <Button
        android:id="@+id/sign_in_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="@font/open_sans_bold"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:text="Sign In"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="@color/beyaz"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:background="@drawable/siyah_button"
        ></Button>


    <TextView
        android:id="@+id/error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:visibility="invisible"
        android:layout_marginTop="20dp"
        android:text="The email address you entered is invalid"
        android:fontFamily="@font/open_sans_semibold"
        android:textColor="@color/asÄ±l_turuncu"></TextView>









    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:layout_gravity="center"
        android:gravity="bottom"

        android:orientation="vertical">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:textSize="12sp"

                android:text="By signing up you agree to "></TextView>

            <TextView
                android:id="@+id/terms_of_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms of Service"
                android:textSize="12sp"

                android:fontFamily="@font/open_sans_bold"
                android:textColor="#ED4E34"
                android:layout_marginLeft="3dp"></TextView>
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"

                android:fontFamily="@font/open_sans_bold"

                android:text="and "></TextView>

            <TextView
                android:id="@+id/privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textSize="12sp"

                android:fontFamily="@font/open_sans_bold"
                android:layout_marginBottom="20dp"

                android:textColor="#ED4E34"
                android:layout_marginLeft="3dp"></TextView>
        </LinearLayout>



    </LinearLayout>







</LinearLayout>